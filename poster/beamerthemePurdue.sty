%\usefonttheme{professionalfonts}
\usefonttheme{serif}
\definecolor{i6colorscheme1}{HTML}{0058AA}  %  e.g. for headline background
\definecolor{i6colorscheme7}{HTML}{0058AA}  %  e.g. for headline background
\definecolor{i6colorscheme2}{HTML}{FFFFFF}  %  e.g. title in headline
\definecolor{i6colorscheme3}{HTML}{FFFFFF}  %  e.g. for poster background
\definecolor{i6colorscheme4}{HTML}{FAFAFA}  %  e.g. for block background
\definecolor{i6colorscheme5}{HTML}{000080}  %  e.g. title in headline, separation lines
%% old gold: CFB53B E0D5C5
\definecolor{i6colorscheme6}{HTML}{D5973D}  %  e.g. for alert

% headline colors and fonts
\setbeamercolor{headline}{bg=white} \setbeamercolor{title in
headline}{fg=i6colorscheme7} \setbeamercolor{author in headline}{fg=i6colorscheme7}
\setbeamercolor{institute in headline}{fg=i6colorscheme7} \setbeamercolor{logo
in headline}{fg=black,bg=i6colorscheme3}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{bg=i6colorscheme5}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=i6colorscheme1}
\setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}

% block environment
\setbeamercolor*{block body}{bg=i6colorscheme4,fg=black} \setbeamercolor*{block
title}{fg=i6colorscheme2,bg=i6colorscheme1} \setbeamerfont{block
title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{example
title}{size=\large,series=\bf,bg=i6colorscheme1,fg=white}

\setbeamercolor*{example body}{fg=white,bg=i6colorscheme4}
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}

